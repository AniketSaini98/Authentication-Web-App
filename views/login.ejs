<div class="row mt-5">

    <div class="col-md-6 m-auto">

        <div class="card card-body text-center">

            <div class="background-video">
                <video src="assets/images/bg.mp4" autoplay loop muted></video>
                <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
                <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_nc1bp7st.json" background="transparent" speed="0.7" style="width: 100%; height: 100px;" loop autoplay></lottie-player>
            </div>

            <h2>
                Login
            </h2>

            <%- include ("./massages.ejs") %>

            <form action="/auth/login" method="POST">

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" />
                </div>

                <button type="submit" class="ui-btn">
                    <span>
                        LOGIN 
                    </span>
                </button>

            </form>

            <p class="mt-4">
                New User? <a href="/auth/register" style="color: cyan; text-decoration: none; font-size: 16px; font-weight: bold;">Register</a>
            </p>

            <p>
                Forgot Password? <a href="/auth/forgot" style="color: tomato; text-decoration: none; font-size: 16px; font-weight: bold;">Reset</a>
            </p>

        </div>

    </div>
    
</div>