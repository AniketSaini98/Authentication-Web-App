<div class="row mt-5">

    <div class="col-md-6 m-auto">

        <div class="card card-body text-center">

            <h1 class="mb-3">
                <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

                <lottie-player src="https://assets1.lottiefiles.com/packages/lf20_mdhnmscc.json"  background="transparent"  speed="1"  style="height: 150px;"  loop  autoplay></lottie-player>
            </h1>

            <h2>
                Forgot Password
            </h2>

            <%- include ("./massages.ejs") %>

            <form action="/auth/forgot" method="POST">

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Reset Password
                </button>

            </form>

            <p class="mt-4">
                Remember your password? <a href="/auth/login">Login</a>
            </p>
            
        </div>

    </div>
    
</div>