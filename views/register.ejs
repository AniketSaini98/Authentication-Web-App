<div class="row mt-5">

    <div class="col-md-6 m-auto">

      <div class="card card-body text-center">

        <h1 class="mb-3">
          <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
          
          <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_zl2c0cuv.json"  background="transparent"  speed="1"  style="height: 150px;"  loop  autoplay></lottie-player>
        </h1>

        <h2>
          Register New User
        </h2>

        <%- include('./massages.ejs') %>

        <form action="/auth/register" method="POST">

          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>

          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>

          <button type="submit" class="reg-btn2">
            <span class="r-btn">Register</span>
          </button>

        </form>

        <p class="mt-4">Already have an account? <a href="/auth/login">Login</a></p>

      </div>
    </div>
  </div>